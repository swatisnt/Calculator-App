<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"/>
    <EditText
        android:layout_marginTop="20sp"
        android:text="0"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et1"/>
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <Button
                android:layout_marginRight="10sp"
                android:text="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o1"
                android:onClick="one"/>
            <Button
                android:layout_marginRight="10sp"
                android:text="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o2"
                android:onClick="two"/>
            <Button
                android:layout_marginRight="10sp"
                android:text="3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o3"
                android:onClick="three"/>

            <Button
                android:id="@+id/cl"
                android:layout_width="107dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1sp"
                android:onClick="clear"
                android:text="C" />
        </TableRow>
        <TableRow>
            <Button
                android:layout_marginRight="10sp"
                android:text="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o4"
                android:onClick="four"/>
            <Button
                android:layout_marginRight="10sp"
                android:text="5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o5"
                android:onClick="five"/>
            <Button
                android:layout_marginRight="10sp"
                android:text="6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o6"
                android:onClick="six"/>
            <Button
                android:text="+"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pl"
                android:onClick="plus"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_marginRight="10sp"
                android:text="7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o7"
                android:onClick="seven"/>
            <Button
                android:layout_marginRight="10sp"
                android:text="8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o8"
                android:onClick="eight"/>
            <Button
                android:layout_marginRight="10sp"
                android:text="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o9"
                android:onClick="nine"/>
            <Button
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/mul"
                android:onClick="mult"/>
        </TableRow>
        <TableRow>
            <Button
                android:layout_marginRight="10sp"
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/o0"
                android:onClick="zero"/>
            <Button
                android:layout_marginRight="10sp"
                android:text="/"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/odiv"
                android:onClick="divide"/>
            <Button
                android:layout_marginRight="10sp"
                android:text="="
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/oep"
                android:onClick="equa"/>
            <Button
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/sub"
                android:onClick="subt"/>
        </TableRow>

           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Celsius To Farehenite"
               android:textAlignment="center"
               android:onClick="ctof"
               android:id="@+id/ctof">
           </Button>


           <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:text="Farehenite To Celsius"
               android:textAlignment="center"
               android:onClick="ftoc"
               android:id="@+id/ftoc">
           </Button>


        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Meter To kilometer"
            android:textAlignment="center"
            android:onClick="mtok"
            android:id="@+id/mtok">
        </Button>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="kilometer to Meter"
            android:textAlignment="center"
            android:onClick="ktom"
            android:id="@+id/ktom">
        </Button>

       </TableLayout>
    </TableLayout>
